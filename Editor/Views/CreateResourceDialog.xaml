<Window x:Class="FirstEngineEditor.Views.CreateResourceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Resource" 
        Height="300" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource PrimaryBackgroundBrush}"
        Foreground="{StaticResource PrimaryForegroundBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Resource Type -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Resource Type:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource PrimaryForegroundBrush}"/>
            <ComboBox Grid.Column="1" x:Name="ResourceTypeComboBox">
                <ComboBoxItem Content="Material" IsSelected="True"/>
                <ComboBoxItem Content="Scene"/>
                <ComboBoxItem Content="SceneLevel"/>
                <ComboBoxItem Content="Light"/>
            </ComboBox>
        </Grid>

        <!-- Virtual Path -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Virtual Path:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource PrimaryForegroundBrush}"/>
            <TextBox Grid.Column="1" x:Name="VirtualPathTextBox" Text="materials/new_material"/>
        </Grid>

        <!-- Additional Properties (for Material) -->
        <GroupBox Grid.Row="2" Header="Properties" x:Name="PropertiesGroupBox" Margin="0,0,0,10">
            <StackPanel x:Name="PropertiesPanel">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Shader:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource PrimaryForegroundBrush}"/>
                    <TextBox Grid.Column="1" x:Name="ShaderNameTextBox" Text="PBR"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Create" Width="80" Click="OnCreate" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Click="OnCancel" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
