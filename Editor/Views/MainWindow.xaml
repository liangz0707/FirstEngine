<Window x:Class="FirstEngineEditor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FirstEngineEditor.ViewModels"
        xmlns:panels="clr-namespace:FirstEngineEditor.Views.Panels"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBackgroundBrush}">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{StaticResource SecondaryBackgroundBrush}">
            <MenuItem Header="_File">
                <MenuItem Header="_New Project" Click="OnNewProject"/>
                <MenuItem Header="_Open Project" Click="OnOpenProject"/>
                <Separator/>
                <MenuItem Header="_Save" Click="OnSave"/>
                <MenuItem Header="Save _As" Click="OnSaveAs"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="OnExit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo"/>
                <MenuItem Header="_Redo"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Scene List" IsChecked="True"/>
                <MenuItem Header="_Resource List" IsChecked="True"/>
                <MenuItem Header="_Property Panel" IsChecked="True"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="Resource _Import" Click="OnImportResource"/>
                <MenuItem Header="_Create Resource" Click="OnCreateResource"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Background="{StaticResource PrimaryBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="250"/>
            </Grid.RowDefinitions>

            <!-- Top: Main Editor Area -->
            <Grid Grid.Row="0" Margin="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel: Scene Resources and Resource List -->
                <Grid Grid.Column="0" Background="{StaticResource SecondaryBackgroundBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Scene Resource List -->
                    <GroupBox Grid.Row="0" Header="Scene Resources">
                        <panels:SceneResourceListView DataContext="{Binding SceneResourceListViewModel}"/>
                    </GroupBox>

                    <!-- Resource List (Legacy) -->
                    <GroupBox Grid.Row="2" Header="Resources (Legacy)">
                        <panels:ResourceListView DataContext="{Binding ResourceListViewModel}"/>
                    </GroupBox>
                </Grid>

                <!-- Vertical Splitter -->
                <GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Stretch" Background="{StaticResource BorderBrush}"/>

                <!-- Center: Render View -->
                <Grid Grid.Column="2" Background="{StaticResource SecondaryBackgroundBrush}">
                    <GroupBox Header="Render View">
                        <panels:RenderView DataContext="{Binding RenderViewModel}"/>
                    </GroupBox>
                </Grid>

                <!-- Vertical Splitter -->
                <GridSplitter Grid.Column="3" Width="3" HorizontalAlignment="Stretch" Background="{StaticResource BorderBrush}"/>

                <!-- Right Panel: Property Panel -->
                <Grid Grid.Column="4" Background="{StaticResource SecondaryBackgroundBrush}">
                    <GroupBox Header="Properties">
                        <panels:PropertyPanelView DataContext="{Binding PropertyPanelViewModel}"/>
                    </GroupBox>
                </Grid>
            </Grid>

            <!-- Horizontal Splitter -->
            <GridSplitter Grid.Row="1" Height="3" HorizontalAlignment="Stretch" Background="{StaticResource BorderBrush}"/>

            <!-- Bottom: Resource Browser -->
            <Grid Grid.Row="2" Background="{StaticResource SecondaryBackgroundBrush}">
                <GroupBox Header="Content Browser">
                    <panels:ResourceBrowserView DataContext="{Binding ResourceBrowserViewModel}"/>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="{StaticResource SecondaryBackgroundBrush}">
            <StatusBarItem>
                <TextBlock Text="{Binding RenderViewModel.RenderStatus}" Foreground="{StaticResource SecondaryForegroundBrush}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="Ready" Foreground="{StaticResource SecondaryForegroundBrush}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
