<Window x:Class="FirstEngineEditor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FirstEngineEditor.ViewModels"
        xmlns:panels="clr-namespace:FirstEngineEditor.Views.Panels"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_New Project" Click="OnNewProject"/>
                <MenuItem Header="_Open Project" Click="OnOpenProject"/>
                <Separator/>
                <MenuItem Header="_Save" Click="OnSave"/>
                <MenuItem Header="Save _As" Click="OnSaveAs"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="OnExit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo"/>
                <MenuItem Header="_Redo"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Scene List" IsChecked="True"/>
                <MenuItem Header="_Resource List" IsChecked="True"/>
                <MenuItem Header="_Property Panel" IsChecked="True"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="Resource _Import"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Scene List and Resource List -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Scene List -->
                <GroupBox Grid.Row="0" Header="Scenes" Margin="5">
                    <panels:SceneListView DataContext="{Binding SceneListViewModel}"/>
                </GroupBox>

                <!-- Resource List -->
                <GroupBox Grid.Row="2" Header="Resources" Margin="5">
                    <panels:ResourceListView DataContext="{Binding ResourceListViewModel}"/>
                </GroupBox>
            </Grid>

            <!-- Center: Render View -->
            <Grid Grid.Column="1" Margin="5">
                <GroupBox Header="Render View">
                    <panels:RenderView DataContext="{Binding RenderViewModel}"/>
                </GroupBox>
            </Grid>

            <!-- Right Panel: Property Panel -->
            <Grid Grid.Column="2">
                <GroupBox Header="Properties" Margin="5">
                    <panels:PropertyPanelView DataContext="{Binding PropertyPanelViewModel}"/>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding RenderViewModel.RenderStatus}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
