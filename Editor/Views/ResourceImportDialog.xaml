<Window x:Class="FirstEngineEditor.Views.ResourceImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Resource" 
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource PrimaryBackgroundBrush}"
        Foreground="{StaticResource PrimaryForegroundBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Source File -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Source File:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource PrimaryForegroundBrush}"/>
            <TextBox Grid.Column="1" x:Name="SourceFileTextBox" IsReadOnly="True" Margin="0,0,10,0"/>
            <Button Grid.Column="2" Content="Browse..." Click="OnBrowseSourceFile" Width="80"/>
        </Grid>

        <!-- Virtual Path -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Virtual Path:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource PrimaryForegroundBrush}"/>
            <TextBox Grid.Column="1" x:Name="VirtualPathTextBox" Text="textures/"/>
        </Grid>

        <!-- Resource Type -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Resource Type:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource PrimaryForegroundBrush}"/>
            <ComboBox Grid.Column="1" x:Name="ResourceTypeComboBox" SelectionChanged="OnResourceTypeChanged">
                <ComboBoxItem Content="Texture" IsSelected="True"/>
                <ComboBoxItem Content="Model"/>
                <ComboBoxItem Content="Mesh"/>
                <ComboBoxItem Content="Shader"/>
            </ComboBox>
        </Grid>

        <!-- Preview/Info -->
        <GroupBox Grid.Row="3" Header="File Info" Margin="0,0,0,10">
            <StackPanel x:Name="FileInfoPanel">
                <TextBlock x:Name="FileNameTextBlock" Margin="5" Foreground="{StaticResource PrimaryForegroundBrush}"/>
                <TextBlock x:Name="FileSizeTextBlock" Margin="5" Foreground="{StaticResource PrimaryForegroundBrush}"/>
                <TextBlock x:Name="FileTypeTextBlock" Margin="5" Foreground="{StaticResource PrimaryForegroundBrush}"/>
            </StackPanel>
        </GroupBox>

        <!-- Status/Message -->
        <TextBlock Grid.Row="4" x:Name="StatusTextBlock" 
                   TextWrapping="Wrap" 
                   Foreground="Orange"
                   Margin="0,0,0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Import" Width="80" Click="OnImport" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Click="OnCancel" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
